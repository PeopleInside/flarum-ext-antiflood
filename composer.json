{
    "name": "peopleinside/flarum-ext-antiflood",
    "description": "Flarum extension to prevent topic/post flooding, limit pending approvals, and fix emoji rendering in code blocks.",
    "type": "flarum-extension",
    "keywords": ["flarum", "antiflood", "approval", "emoji", "code-blocks"],
    "license": "MIT",
    "authors": [
        {
            "name": "Peopleinside",
            "website": "https://github.com/PeopleInside/flarum-ext-antiflood"
        }
    ],
    "require": {
        "flarum/core": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "pestphp/pest": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Peopleinside\\AntiFlood\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "AntiFlood",
            "icon": {
                "name": "fas fa-shield-alt"
            }
        },
        "flarum-cli": {
            "modules": {
                "forum": true
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
